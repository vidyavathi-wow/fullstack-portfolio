{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:sonarjs/recommended", "prettier"],
  "plugins": ["sonarjs"],
  "rules": {
    "complexity": ["warn", { "max": 10 }],
    "max-lines": ["warn", 300],
    "max-depth": ["warn", 4],
    "max-params": ["warn", 4]
  }
}
